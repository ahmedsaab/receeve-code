{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": { "*": ["types/*"] },
    "target": "es6",
    "module": "commonjs",
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata", "node", "mocha"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ]
}
